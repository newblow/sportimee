{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}   
  <div class="container">  
    <div class="hero">
      <form class="form-sigin" action="{{ path('app_login') }}" method="post">
        <img
              src="/images/logos/sp.svg"
              width="500px"
              height="340px"
              alt="AccueilSportime"
              className="justify-center"
            />
        <input type="email" name="_username" id="email" value="{{ last_username }}" required autofocus required="" class="input" placeholder="addresse mail">
        <input type="password" name="_password" id="password" required="" class="input" placeholder="Password">   

        <input type="submit" value="Se connecter" class="input submit  ">
        
        <p class="forgotten">Vous avez oublié vos identifiants ? <a href="#">Obtenez de l’aide pour vous connecter.</a></p>
       
        <div class="input btn">S'inscrire </div>    
        
      </form>
    </div>
</div>
        
{% endblock %}

{% block stylesheets %}
    <style>
.container {
  height: 100%;
  width: 100%;
}

.hero {
  padding: 60px 20px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: none;
}

.form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
}

.input {
  padding: 1rem 1.2rem;
  margin: 2rem;
  border-radius: 2rem;
  display: block;
  width: 80%;
  border: none;
  box-shadow: inset 6px 6px 8px rgba(97, 97, 97, 0.075),
    6px 6px 6px rgba(255, 255, 255, 0.781);
  outline: none;
  background-color: inherit;
  color: rgb(161, 161, 161);
  font-size: inherit;
}

.submit , .btn {
  margin-top: 20px;
  font-weight: bold;
  box-shadow: -3px -3px 5px white, 3px 3px 5px rgba(209, 209, 209, 0.705);
  color: rgb(112, 112, 112);
  cursor: pointer;
  
}

.btn {
  text-align: center;
  color: black;
}

::placeholder {
  color: rgb(161, 161, 161);
}

.forgotten {
  text-align: center;
  font-size: .8rem;
  width: 100%;
  color: gray;
  margin: 15px 0;
}

a {
  color: inherit;
  font-weight: bold;
  text-decoration: none;
}



.or::before , .or::after {
  position: absolute;
  content: '';
  width: 700%;
  height: 1px;
  top: 50%;
  margin: 0 6px;
  background-color: rgba(0, 0, 0, 0.479);
}


.signup {
  color: white;
  margin-top: 15px;
  font-size: 1rem;
}

body {
  background-image: url("/images/image14.jpg");
  background-size: cover;
}
    </style>
{% endblock %}
