{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="form-signin">
        <h2 class="form-signin-heading font-weight-normal">Se Connecter</h2>
        <br>
        <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control h-full-width" required autofocus />
        <br>
        <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" class="form-control h-full-width" placeholder="Mot de passe" required />
        <br>
 
        <input type="submit"
               class="btn btn-lg btn-primary btn-block hover:text-teal-500"
               type="_submit"
               name="_submit"
               value="{{ 'Connexion'|trans }}" />
    </form>

